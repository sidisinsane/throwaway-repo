{
  "source": {
    "include": ["src", "public/snippets", "package.json", "README.md"],
    "includePattern": ".+\\.(c|m)?js(doc|x)?$",
    "excludePattern": "(node_modules/|docs)"
  },
  "plugins": ["plugins/markdown"],
  "opts": {
    "encoding": "utf8",
    "readme": "./README.md",
    "destination": "docs/",
    "recurse": true,
    "verbose": true,
    "template": "./node_modules/clean-jsdoc-theme",
    "theme_opts": {
      "default_theme": "light"
    }
  },
  "markdown": {
    "hardwrap": false,
    "idInHeadings": true
  }
}
