# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
insert_final_newline = true

# Keep defaults for generated files
[{build/*,coverage/*,dist/*,docs/*,node_modules/*,bun.lockb,package-lock.json,pnpm-lock.yaml,yarn-lock.yaml}]
indent_style = unset
indent_size = unset
end_of_line = unset
charset = unset
insert_final_newline = unset
