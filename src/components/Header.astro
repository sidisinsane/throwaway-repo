---
interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<header class="header">
  <h1 class="header__title">{title}</h1>
  {description && <p class="header__description">{description}</p>}
</header>

<style>
  .header {
    text-align: center;
  }
</style>
